MOLINFO STRUCTURE=dialaA.pdb

# Compute the backbone dihedral angle phi
phi: TORSION ATOMS=5,7,9,15

# Compute the backbone dihedral angle psi
psi: TORSION ATOMS=7,9,15,17

# Apply well-tempered metadynamics on both phi and psi
metad: METAD ARG=phi,psi PACE=500 HEIGHT=1.2 BIASFACTOR=10 SIGMA=0.3,0.3 FILE=HILLS

# Print phi and psi values along with bias potential
PRINT ARG=phi,psi,metad.bias FILE=COLVAR STRIDE=10

